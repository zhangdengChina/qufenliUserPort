.login {
  height: 100%;
  background: #fffeff;
  color: #333;
  font-family: PingFangSC-Regular, PingFang SC;
  position: relative;
}
.login .login-header {
  padding: 20rpx;
  font-size: 40rpx;
  padding-top: 60rpx;
  background: -webkit-linear-gradient(333deg, #ff5a2b 0%, #ff5934 36%, #ff9c1f 100%);
  background: linear-gradient(117deg, #ff5a2b 0%, #ff5934 36%, #ff9c1f 100%);
  color: #fff;
  text-align: center;
}
.login .login-title {
  padding: 40rpx 30rpx 0;
  font-size: 44rpx;
  font-weight: bold;
}
.login .login-content {
  padding-left: 30rpx;
}
.login .login-content .login-content-item {
  padding: 30rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: 1px solid #e0e0e0;
  margin-top: 40rpx;
  position: relative;
}
.login .login-content .login-content-item text:first-child {
  width: 150rpx;
  border-right: 1px solid #999;
  font-size: 36rpx;
}
.login .login-content .login-content-item input {
  margin-left: 30rpx;
}
.login .login-content .login-content-item .testCode {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  font-size: 30rpx;
  color: #FF5904;
  padding: 15rpx 25rpx;
  background: #f1f1f1;
  border-radius: 40rpx;
  opacity: 0.5;
}
.login .login-content .login-content-item uni-button {
  line-height: 1em;
}
.login .login-content .login-content-item .selectCode {
  opacity: 1;
}
.login .login-content .password {
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.login .login-content .password input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.login .login-content .login-content-userTreaty {
  padding-right: 30rpx;
  font-size: 24rpx;
  padding-top: 20rpx;
  position: relative;
}
.login .login-content .login-content-userTreaty uni-radio .uni-radio-input {
  width: 30rpx;
  height: 30rpx;
}
.login .login-content .login-content-userTreaty .radio {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #666;
  position: absolute;
  left: 0;
}
.login .login-content .login-content-userTreaty .radio image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.login .login-content .login-content-userTreaty > text {
  color: #FF5904;
  position: absolute;
  right: 30rpx;
}
.login .login-content .login-content-userTreaty .treatyHide {
  display: none;
}
.login .login-content .login-content-userTreaty .codeHide {
  display: none;
}
.login .login-content .tips {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 30rpx;
  padding: 20rpx 0;
  padding-right: 20rpx;
  color: #FF5904;
}
.login .login-content-btn {
  width: 95%;
  background: -webkit-linear-gradient(207deg, #ff9960 0%, #ff5a2c 100%);
  background: linear-gradient(243deg, #ff9960 0%, #ff5a2c 100%);
  height: 88rpx;
  border-radius: 10rpx;
  color: #fff;
  font-size: 40rpx;
  text-align: center;
  margin: 150rpx auto 0;
  line-height: 88rpx;
  box-shadow: 0 10rpx 20rpx #FF9960;
}
.login .btnState {
  opacity: 0.5;
  color: #fff !important;
}
.login .login-tipsText {
  font-size: 28rpx;
  color: #999999;
  width: 88%;
  margin: 100rpx auto 0;
}
.login .rememberPwdHide {
  display: none !important;
}
.login .rememberPwd {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(1, 1, 1, 0.3);
}
.login .rememberPwd .rememberPwd-content {
  padding: 30rpx;
  width: 50%;
  height: 200rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  border-radius: 20rpx;
  font-size: 30rpx;
  text-align: center;
  margin: auto;
  background: #fff;
  overflow: hidden;
}
.login .rememberPwd .rememberPwd-content .btn {
  position: absolute;
  bottom: 0;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-left: -30rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  color: #fff;
}
.login .rememberPwd .rememberPwd-content .btn text {
  width: 50%;
  padding: 20rpx 0;
  background: #ccc;
}
.login .rememberPwd .rememberPwd-content .btn text:last-child {
  background: #4CD964;
}
.login .otherLogin {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  font-size: 30rpx;
  margin-top: 200rpx;
}
.login .otherLogin .icon-weixin {
  font-size: 80rpx;
  color: #1bac19;
  margin-left: 20rpx;
}

